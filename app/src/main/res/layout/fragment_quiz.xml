<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back arrow & top progress -->
    <ImageButton
        android:id="@+id/imgViewBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Question number badge -->

    <ProgressBar
        android:id="@+id/topProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:max="10"
        android:progress="1"
        app:layout_constraintEnd_toStartOf="@+id/txtQuestionNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgViewBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuestionNumber"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_level_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Question text -->
    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Question text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Options grid (2x2) -->
    <GridLayout
        android:id="@+id/optionsGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        app:layout_constraintTop_toBottomOf="@id/txtQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        >

        <!-- Option 0 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOpt0"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_columnWeight="1"
            android:background="@color/blue_200"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/txtOpt0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="option 1"/>

        </androidx.cardview.widget.CardView>

        <!-- Option 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOpt1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_columnWeight="1"
            android:background="@color/red_200"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/txtOpt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="option 2"/>

        </androidx.cardview.widget.CardView>

        <!-- Option 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOpt2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_columnWeight="1"
            android:background="@color/red_200"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/txtOpt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="option 3"/>

        </androidx.cardview.widget.CardView>

        <!-- Option 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOpt3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:layout_columnWeight="1"
            android:background="@color/orange_200"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/txtOpt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="option 4"/>

        </androidx.cardview.widget.CardView>
    </GridLayout>

    <!-- Next button -->
    <Button
        android:id="@+id/bottomNext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="berikutnya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
