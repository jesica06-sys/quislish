<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home / Level Page -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.quislish.navigasi.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <!-- Action menuju halaman Quiz -->
        <action
            android:id="@+id/action_homeFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>

    <!-- Quiz Page -->
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.quislish.QuizFragment"
        android:label="Quiz"
        tools:layout="@layout/fragment_quiz">

        <!-- Action kembali ke Home jika selesai -->
        <action
            android:id="@+id/action_quizFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/lessonFragment"
        android:name="com.example.quislish.navigasi.LessonFragment"
        android:label="fragment_lesson"
        tools:layout="@layout/fragment_lesson" >
        <action
            android:id="@+id/action_lessonFragment_to_lessonDetail"
            app:destination="@id/lessonDetail" />
    </fragment>
    <fragment
        android:id="@+id/lessonDetail"
        android:name="com.example.quislish.navigasi.LessonDetail"
        android:label="fragment_lesson_detail"
        tools:layout="@layout/fragment_lesson_detail" >
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <action
            android:id="@+id/action_lessonDetail_to_lessonFragment"
            app:destination="@id/lessonFragment" />
    </fragment>

</navigation>
